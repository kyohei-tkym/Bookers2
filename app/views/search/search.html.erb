<div class="container">
  <div class="col-xs-12">
    <% if @model == "user" %>
    <h2>User search for '<%= @value %>'</h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Introduction</th>
        </tr>
      </thead>
      <% @datas.each do |user| %>
        <tbody>
          <tr>
            <th><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6" %></th>
            <th><%= user.name %></th>
            <th></th>
            <th><%= link_to"Show", "/users/#{user.id}" %></th>
          </tr>
        </tbody>
      <% end %>
    </table>
    <% elsif @model == "book" %>
    <h2>Books search for '<%= @value %>'</h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <% @datas.each do |book| %>
      <tbody>
        <tr>
          <th>
            <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback:"no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6" %>
            <% end %>
          </th>
          <th><%= link_to book.title, "/books/#{book.id}" %></th>
          <th><%= book.body %></th>
        </tr>
      </tbody>
      <% end %>
    <% end %>
    </table>
  </div>
</div>
