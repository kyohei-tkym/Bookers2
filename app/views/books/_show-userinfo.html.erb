<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <h2>User info</h2>
            <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback:"no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6" %>
            <table class="table">
                <tbody>
                    <tr>
                        <th>name</th>
                        <th><%= user.name%></th>
                    </tr>
                    <tr>
                        <th>Introduction</th>
                        <th><%= user.introduction %></th>
                    </tr>
                    <tr>
                        <th>Follows</th>
                        <th><%= link_to "#{user.followings.count}", user_followings_path(user.id) %></th>
                    </tr>
                    <tr>
                        <th>Followers</th>
                        <th><%= link_to "#{user.followers.count}", user_followers_path(user.id) %></th>
                    </tr>
                </tbody>
            </table>
            <% if current_user.following?(user) %>
              <%= link_to "Unfollow", user_relationships_path(user.id), class:"btn btn-success", method: :delete %>
            <% else %>
              <%= link_to "Follow", user_relationships_path(user.id), class:"btn btn-success", method: :post %>
            <% end %>
            <h2 class="mt-3">New book</h2>
            <%= form_with model:book_new, url:'/books', local:true do |f| %>
                    <div class="form-group">
                        <label>Title</label>
                        <%= f.text_field :title, class:"form-control book_title" %>
                    <div class="form-group">
                        <label>Opinion</label>
                        <%= f.text_field :body, class:"form-control book_body" %>
                    </div>
                    <div class="form-group">
                        <%= f.submit'Create Book', class:"btn btn-success" %>
                    </div>
            <% end %>
        </div>
    </div>
