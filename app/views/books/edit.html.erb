<div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model:@book, local:true do |f| %>
      <div class="form-group">
        <label for="inputTitle">Title</label>
        <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル", class:"form-control name" %>
      </div>

      <div class="form-group">
        <label for="inputOpinion">Opinion</label>
        <%= f.text_field :body, autofocus: true, id:"inputOpinion", placeholder:"オピニオン", class:"form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update Book", class:"btn btn-success" %>
      </div>
      <% end %>
      <%= link_to"Show", "/books/#{@book.id}"%> | <%= link_to"Back", books_path %>
      </div>

    </div>