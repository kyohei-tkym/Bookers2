<%= render 'books/userinfo', user: @user, book_new: @book_new %>

<div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
                <table class="table table-hover table-inverse">
                    <tbody>
                        <tr>
                            <td>
                            <%= link_to "/users/#{@user.id}" do %>
                                <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6" %>
                            <% end %>
                            <br><%= link_to @user.name, "/users/#{@user.id}" %></br>
                            </td>
                            <td><%= link_to @book.title, "/books/#{@book.id}" %></td>
                            <td><%= @book.body %></td>
                            <% if @book.favorited_by?(current_user) %>
                            <td>
                                <%= link_to book_favorites_path(@book), method: :delete do%>
                                    <i class="fas fa-heart unlike-btn"></i><%= @book.favorites.count %>
                                <% end %>
                            </td>
                            <% else %>
                            <td>
                                <%= link_to book_favorites_path(@book), method: :post do%>
                                    <i class="far fa-heart like-btn" ></i><%= @book.favorites.count %>
                                <% end %>
                            </td>
                            <% end %>
                            <td>コメント件数：<%= @book.book_comments.count %></td>
                            <% if @user.id == current_user.id %>
                            <td><%= link_to"Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %></td>
                            <td><%= link_to"Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger","data-confirm" => "本当に削除しますか？" %></td>
                            <% end %>
                        </tr>
                    </tbody>
                </table>
                <div class="comment-index">
                    <% @book.book_comments.each do |book_comment| %>
                    <p><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6" %></p>
                    <p><%= link_to book_comment.user.name, "/users/#{@user.id}" %></p>
                    <p><%= book_comment.comment %></p>
                    <p>
                    <% if book_comment.user == current_user %>
                        <%= link_to "Delete", book_book_comments_path(book_comment.book, book_comment), class:"btn btn-sm btn-danger", method: :delete %>
                    <% end %>
                    </p>
                    <% end %>
                </div>
                <div class="new-comment">
                    <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
                        <%= f.text_area :comment, class: 'form-control book_comment' %>
                        <%= f.submit "送信する" %>
                    <% end %>
                </div>
        </div>

</div>