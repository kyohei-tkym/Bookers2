<%= render 'books/userinfo', user: @user, book_new: @book_new %>
<div class="col-md-8 offset-md-1">
            <h2>Users</h2>
                <table class="table table-hover table-inverse">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th></th>
                            <th colspan="3"></th>
                        </tr>
                    </thead>
                    <% @users.each do |users| %>
                    <tbody>
                        <tr>
                            <td><%= attachment_image_tag users, :profile_image, :fill, 60, 60, fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6" %></td>
                            <td><%= users.name %></td>
                            <td></td>
                            <td><%= link_to"Show", "/users/#{users.id}" %></td>
                            <td>
                                <% if current_user.following?(users) %>
                                  <%= link_to "Unfollow", user_relationships_path(users.id), method: :delete %>
                                <% else %>
                                  <%= link_to "Follow", user_relationships_path(users.id), method: :post %>
                                <% end %>
                            </td>
                        </tr>
                    </tbody>
                    <% end %>
                </table>
        </div>
</div>