<% if user_signed_in? && current_user.id.to_s == params[:id] %>
    <%= render 'books/userinfo', user: @user, book_new: @book_new %>
<% else %>
    <%= render 'books/show-userinfo', user: @user, book_new: @book_new %>
<% end %>

        <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
                <table class="table table-hover table-inverse">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Title</th>
                            <th>Opinion</th>
                            <th colspan="3"></th>
                        </tr>
                    </thead>
                    <% @books.each do |book| %>
                    <tbody>
                        <tr>
                            <td>
                            <%= link_to "/users/#{@user.id}" do %>
                                <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6" %>
                            <% end %>
                            </td>
                            <td><%= link_to book.title, "/books/#{book.id}" %></td>
                            <td><%= book.body %></td>
                        </tr>
                    </tbody>
                    <% end %>
                </table>
        </div>

</div>